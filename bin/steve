_export () { export $1=$2; }
_export __STEVE_HELP	${STEVE}/bin/steve.d/help
_export __STEVE_NAME	$1
shift

[ "${__STEVE_NAME} =="" ] && {

[ "${0:0:1}" == "/" ] && {
    _export __STEVE_MODE
    _export __STEVE_TARGET ${STEVE}/bin/steve.d/${__STEVE_NAME}

} || {
    _export __STEVE_MODE source
    _export __STEVE_TARGET ${STEVE}/bin/steve.s/${__STEVE_NAME}
}


[ -f ${__STEVE_TARGET} ] && ${__STEVE_MODE} ${__STEVE_TARGET} $* 
[ -f ${__STEVE_TARGET} ] || ${__STEVE_HELP} ${__STEVE_TARGET} $*

