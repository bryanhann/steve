DD=${STEVE}/bin/steve.d
SS=${STEVE}/bin/steve.s

is_help_file () {
    [[ ${1} = *help ]]
    return $?
}

basic_help () {
   for F in $(ls $DD); do
       is_help_file $F  && continue
       echo "    steve $F"
   done

   for F in $(ls $SS); do
       is_help_file $F  && continue
       echo "    . steve $F"
    done
}

special_help () {
    local doc=${DD}/$1.help
    [ -f $doc ] && cat $doc || echo "No help on $1"
}

[ "$1" == "" ] && basic_help 
[ "$1" == "" ] || special_help $1

